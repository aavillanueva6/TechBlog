
<div class="card mt-4" id="{{id}}">
  <div class="field">
    <p class="control has-icons-left has-icons-right">
      <input class="input" type="text" value="{{title}}" id="postTitle">
      <span class="icon is-small is-left">
        <i class="fas fa-heading"></i>
      </span>
    </p>
  </div>
  <div class="field">
    <div class="control">
      <textarea class="textarea" id="postBody">{{body}}</textarea>
    </div>
  </div>
</div>
<div class="field mt-4">
  <p class="control">
    <button class="button is-success" id="edit-post-submit">
      Update Post
    </button>
  </p>
</div>
<div class="field">
  <p class="control">
    <button class="button is-danger" id="delete-post-submit">
      Delete Post
    </button>
  </p>
</div>