
<section class="hero is-small is-primary">
  <div class="hero-body">
    <p class="title">
      Log In   
    </p>
  </div>
</section>
<div class="field">
  <p class="control has-icons-left has-icons-right">
    <input class="input" id="login-username" type="text" placeholder="Username">
    <span class="icon is-small is-left">
      <i class="fas fa-user"></i>
    </span>
    <span class="icon is-small is-right">
      <i class="fas fa-check"></i>
    </span>
  </p>
</div>
<div class="field">
  <p class="control has-icons-left">
    <input class="input" id="login-password" type="password" placeholder="Password">
    <span class="icon is-small is-left">
      <i class="fas fa-lock"></i>
    </span>
  </p>
</div>
<div class="field">
  <p class="control">
    <button class="button is-success" id="login-submit">
      Login
    </button>
  </p>
</div>
<button class="button is-info px-0 py-0">
  <a class="button is-info" href="/signup">
    Sign Up Instead
  </a>
</button>
<div class="notification is-danger is-light is-hidden mt-2" id="login-error-message">
  <button class="delete" id="login-error-delete"></button>
  Incorrect Username & Password combination.  Please try logging in again.
</div>

<script src="./js/login.js"></script>

